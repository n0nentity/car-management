<UserControl x:Class="car_management.View.CreateProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:viewModel="clr-namespace:car_management.ViewModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewModel:CreateProjectViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="800" d:DesignWidth="1000">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <Button Margin="20" Height="100" FontSize="30" Background="Gray" Content="Create new Project" Command="{Binding CreateProjectCommand}"/>
            <Button Margin="20" Height="100" FontSize="30" Background="Gray" Content="Load Project" Command="{Binding LoadProjectCommand}"/>
        </StackPanel>
        
    </Grid>
</UserControl>
